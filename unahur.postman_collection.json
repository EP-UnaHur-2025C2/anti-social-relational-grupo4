      "item": [
        {
          "name": "Agregar imágenes a post",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "images", "type": "file", "src": "C:/ruta/a/imagen1.jpg" },
                { "key": "images", "type": "file", "src": "C:/ruta/a/imagen2.png" }
              ]
            },
            "url": { "raw": "http://localhost:3000/api/posts/<POST_ID>/images", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["api","posts","<POST_ID>","images"] }
