  "item": [
    {
      "name": "Usuarios",
      "item": [
        {
          "name": "Crear usuario",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nickName\": \"leo\",\n  \"email\": \"leo@x.com\",\n  \"displayName\": \"Leandro\",\n  \"password\": \"1234\"\n}"
            },
            "url": { "raw": "http://localhost:3000/api/users", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["api","users"] }
          }
        },
        {
          "name": "Listar usuarios",
