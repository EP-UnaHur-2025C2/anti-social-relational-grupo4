{
  "info": {
    "name": "UnaHur Anti-Social Net - Funcional con Scripts",
    "_postman_id": "unahur-antisocial-net-scripts",
    "description": "Colección funcional para probar la API de UnaHur Anti-Social Net con guardado automático de USER_ID y POST_ID",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "BASE_URL", "value": "http://localhost:3000/api" },
    { "key": "USER_ID", "value": "" },
    { "key": "POST_ID", "value": "" }
  ],
  "item": [
    {
      "name": "Usuarios",
      "item": [
        {
          "name": "Crear usuario",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nickName\": \"leo\",\n  \"email\": \"leo@x.com\",\n  \"displayName\": \"Leandro\",\n  \"password\": \"1234\"\n}"
            },
            "url": { "raw": "{{BASE_URL}}/users", "host": ["{{BASE_URL}}"], "path": ["users"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set(\"USER_ID\", jsonData.id);",
                  "    console.log(\"USER_ID guardado en variable de entorno:\", jsonData.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Listar usuarios",
          "request": {
            "method": "GET",
            "url": { "raw": "{{BASE_URL}}/users", "host": ["{{BASE_URL}}"], "path": ["users"] }
          }
        }
      ]
    },
    {
      "name": "Posts",
      "item": [
        {
          "name": "Crear post",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"authorId\": \"{{USER_ID}}\",\n  \"description\": \"Mi primer post\",\n  \"tags\": [\"mood\",\"ironia\"]\n}"
            },
            "url": { "raw": "{{BASE_URL}}/posts", "host": ["{{BASE_URL}}"], "path": ["posts"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set(\"POST_ID\", jsonData.id);",
                  "    console.log(\"POST_ID guardado en variable de entorno:\", jsonData.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Listar posts",
          "request": {
            "method": "GET",
            "url": { "raw": "{{BASE_URL}}/posts", "host": ["{{BASE_URL}}"], "path": ["posts"] }
          }
        }
      ]
    },
    {
      "name": "Comentarios",
      "item": [
        {
          "name": "Crear comentario",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"authorId\": \"{{USER_ID}}\",\n  \"body\": \"Buen post\"\n}"
            },
            "url": { "raw": "{{BASE_URL}}/comments/{{POST_ID}}", "host": ["{{BASE_URL}}"], "path": ["comments","{{POST_ID}}"] }
          }
        }
      ]
    },
    {
      "name": "Tags",
      "item": [
        {
          "name": "Listar tags",
          "request": {
            "method": "GET",
            "url": { "raw": "{{BASE_URL}}/tags", "host": ["{{BASE_URL}}"], "path": ["tags"] }
          }
        }
      ]
    }
  ]
}
