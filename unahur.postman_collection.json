          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"authorId\": \"<USER_ID>\",\n  \"description\": \"Mi primer post\",\n  \"tags\": [\"mood\",\"ironia\"]\n}"
            },
